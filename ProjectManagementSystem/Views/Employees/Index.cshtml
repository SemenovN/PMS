@model IEnumerable<ProjectManagementSystem.Models.Employee>

@{
    ViewBag.Title = "Index";
    var grid = new WebGrid(Model);
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Добавить сотрудника", "Create")
</p>


@grid.GetHtml(tableStyle: "table",
    columns: grid.Columns(
        grid.Column("Name", header:  "ФИО", format: (item) => Html.ActionLink(((string)item.Name), "Details", new { id = item.EmployeeId })),
        grid.Column(header:  "Email", format: @<text>@{@item.Email}</text>),
        grid.Column(header:  "Телефон", format: @<text>@{@item.NTel}</text>),
        grid.Column(header:  "", format: (item) => Html.ActionLink("Delete", "Delete", new { id = item.EmployeeId }))
        )
    )